{
    "compilerOptions": {
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "experimentalDecorators": false,
        "target": "ES2020",
        "moduleResolution": "node",
        "module": "ES2020",
        "strict": true,
        "types": ["vite/client"],
        "typeRoots": ["./resources/js/Types/"]
    },
    "exclude": ["node_modules", "public"]
}
